@page
@model AirBook.Pages.Itinerarios.IndexModel
@{
}
<h1>Index Itinerarios</h1>
<p>
    <a asp-page="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Itinerarios[0].Reserva.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Itinerarios[0].Detalle)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Itinerarios)
        {
            <tr>
                
                <td>
                    @Html.DisplayFor(modelItem => item.Reserva.Estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Detalle)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.IdItinerario" class="btn btn-warning">Edit</a>
                    <a asp-page="./Delete" asp-route-id="@item.IdItinerario" class="btn btn-danger">Delete</a>
                </td>

            </tr>
        }
    </tbody>
</table>
